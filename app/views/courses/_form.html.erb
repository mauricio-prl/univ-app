<div class="container">
  <%= render 'errors/messages', obj: @course %>
  
  <div class="col s12 m12 l12">
    <div class="card-panel">
      <div class="row">
        <%= form_for(@course, html: { class: 'col s12'}) do |f| %>
          <div class="row">
            <div class="input-field">
              <%= f.text_field :name, autofocus: true, placeholder: 'Ex: Math' %>
              <%= f.label :name, 'Course Name', class: 'active' %>
            </div>
          </div>
          <div class="row">
            <div class="input-field">
              <%= f.text_field :short_name, placeholder: 'Ex: CFB345' %>
              <%= f.label :short_name, 'Code', class: 'active' %>
            </div>
          </div>
          <div class="row">
            <div class="input-field">
              <%= f.text_area :description, class: 'materialize-textarea' %>
              <%= f.label :description, class: 'active' %>
            </div>
          </div>
          <div class="row">
            <div class="file-field input-field">
              <%= button_tag(class: 'btn #00e676 green accent-3 right') do %>
                <% if @course.new_record? %>
                  Create Course<i class="material-icons right">send</i>
                <% else %>
                  Update Course<i class="material-icons right">send</i>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
